{
    "enabled": true,
    "sources": {
        "web_search": {
            "enabled": true,
            "provider": "duckduckgo",
            "max_results": 5
        },
        "wikipedia": {
            "enabled": true,
            "language": "ru"
        },
        "weather": {
            "enabled": true,
            "provider": "openweathermap"
        },
        "books": {
            "enabled": true,
            "provider": "openlibrary"
        },
        "space": {
            "enabled": true,
            "provider": "open_notify"
        },
        "quotes": {
            "enabled": true,
            "provider": "quotable"
        },
        "cat_facts": {
            "enabled": true,
            "provider": "cat_facts_api"
        }
    },
    "cache": {
        "enabled": true,
        "ttl": 3600,
        "max_size": 1000
    },
    "database": {
        "type": "sqlite",
        "path": "data/external_sources.db"
    }
} 